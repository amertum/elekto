# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /{clientId}/?                                           Elector.index
GET     /{clientId}/elector/?                                   Elector.index

GET     /{clientId}/elector/login                               Elector.login
POST    /{clientId}/elector/login                               Elector.doLogin
GET     /{clientId}/elector/logout                              Elector.doLogout

GET     /{clientId}/elector/elections                           Elector.elections
POST    /{clientId}/elector/elections/{electionId}/vote         Elector.doVote

GET     /{clientId}/manager/?                                   Manager.index

# Ignore favicon requests
GET     /favicon.ico                                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                                staticDir:public

# Catch all
*       /{controller}/{action}                                  {controller}.{action}
